@model UserSignUpViewModel

<div class="d-flex justify-content-center mb-2 mt-2">

    <div class="ctext-muted shadow p-2 bg-white rounded ml-6 mr-6 mt-1 " style="width: 40rem;">
        @* <form action="/movies/create" method="post" autocomplete="on"> Önceden böyle kullanıyorduk  artık TagHelpers ile aşağıdaki gibi kullanacağız*@
        <form asp-controller="RegisterUser" asp-action="Index" method="post" autocomplete="on">
            @if (ViewData.ModelState.IsValid)
            {
                <div class="text-danger" asp-validation-summary="All"></div>
            }
            else
            {
                <div class="p-3 mb-2 bg-danger text-white" asp-validation-summary="All"></div>

            }

            <h3>Kullanıcı Kayıt Formu</h3>
            <hr />
            <div class="mb-3">
                @*<label for="Title">Title</label> Önceden böyle kullanıyorduk  artık TagHelpers ile aşağıdaki gibi kullanacağız*@
                <label asp-for="Name"></label>
                @*<input type="text" name="Title" class="form-control"> Önceden böyle kullanıyorduk  artık TagHelpers ile aşağıdaki gibi kullanacağız*@
                <input asp-for="Name" class="form-control">
            </div>
            <div class="mb-3">
                @*<label for="Title">Title</label> Önceden böyle kullanıyorduk  artık TagHelpers ile aşağıdaki gibi kullanacağız*@
                <label asp-for="Surname"></label>
                @*<input type="text" name="Title" class="form-control"> Önceden böyle kullanıyorduk  artık TagHelpers ile aşağıdaki gibi kullanacağız*@
                <input asp-for="Surname" class="form-control">
            </div>
            <div class="mb-3">
                @*<label for="Title">Title</label> Önceden böyle kullanıyorduk  artık TagHelpers ile aşağıdaki gibi kullanacağız*@
                <label asp-for="Mail"></label>
                @*<input type="text" name="Title" class="form-control"> Önceden böyle kullanıyorduk  artık TagHelpers ile aşağıdaki gibi kullanacağız*@
                <input asp-for="Mail" class="form-control">
            </div>
            <div class="mb-3">
                @*<label for="Title">Title</label> Önceden böyle kullanıyorduk  artık TagHelpers ile aşağıdaki gibi kullanacağız*@
                <label asp-for="UserName"></label>
                @*<input type="text" name="Title" class="form-control"> Önceden böyle kullanıyorduk  artık TagHelpers ile aşağıdaki gibi kullanacağız*@
                <input asp-for="UserName" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
            </div>
            <div class="mb-1">
                <button class="btn btn-dark">Kayıt Ol</button>
            </div>

            <p class="ctext-muted  text-center mb-1">Bir hesabınız mı var? </p>
            <div class="ctext-muted  text-center mb-3">  <a class="btn btn-warning btn-sm " asp-action="Login" asp-controller="Account">Giriş Yap</a> </div>
            
        </form>



    </div>

</div>
