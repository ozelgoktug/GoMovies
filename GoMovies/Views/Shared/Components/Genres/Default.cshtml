@model List<Genre>
<div class="list-group">
    <a href="#" class="list-group-item list-group-item-secondary list-group-item-action active">
        Kategoriler
    </a>
    <a href="/movies/list/" class="list-group-item list-group-item-action  @(ViewBag.SelectedGenereId==null?"list-group-item-dark":"")">Tüm Filmler</a>
    @foreach (var genre in Model)
        
    {
        <a 
           href="/movies/list/@genre.GenreId" 
           class="list-group-item list-group-item-action @(ViewBag.SelectedGenereId == genre.GenreId.ToString() ? "list-group-item-dark" : "") "> 
              @* Yukarıda ne yaptık: GenreViewComponent.cs'den gelen SelectedGenreId değeri o anki sayfanın reoute
                 undan gelen id değeridir. işte bu id değeri buradaki foreach içinde butonları oluşturan
                 genre.GenreId ile eşit ise class içine "list-group-item-dark" yazdırıyoruz ve basılmış buton gri renk oluyor değilse boş*@
     @genre.Name  </a>
    }
    <a href="#" class="list-group-item list-group-item-action disabled" tabindex="-1" aria-disabled="true">Üyelere Özel</a>
</div>