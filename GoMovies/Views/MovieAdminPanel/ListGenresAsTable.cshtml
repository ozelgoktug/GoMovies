@model MovieAdminPanelGenresViewModel

<h1>Türler Tablosu</h1>

<div class="row">

    <div class="col-md-8">
        <table class="table table-striped table-hover table-bordered p-4">
            <thead>
                <tr>
                    <th style="width:30px;">id</th>
                    <th>Name</th>
                    <th style="width:70px;">Count</th>
                    <th style="width:160px;"></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var genre in Model.Genres)
                {
                    <tr>
                        <td>@genre.GenreId</td>
                        <td>@genre.Name</td>
                        <td>@genre.Count</td>
                        <td>
                            <a href="/MovieAdminPanel/UpdateGenre/@genre.GenreId" class="btn btn-warning btn-sm">Güncelle</a>
                            <form action="/MovieAdminPanel/DeleteGenre" method="post" style="display:inline;">
                                <input type="hidden" name="genreId" value="@genre.GenreId" />
                                <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="col-md-4">
        <form asp-action="CreateGenre" asp-controller="MovieAdminPanel" method="post">
            <div class="d-flex justify-content-center mb-2">
                <div class="ctext-muted shadow p-4 bg-white rounded mt-1 " style="width: 30rem;">
                    <h5> <strong> Tür Ekleme Formu</strong></h5>
                    <div class="mb-3">
                        <label asp-for="Name"></label>
                        <input class="form-control" asp-for="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <button class="btn btn-danger" type="submit">Ekle</button>
                </div>
            </div>
        </form>
    </div>

</div>



