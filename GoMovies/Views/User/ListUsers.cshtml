@model List<ApplicationUser>


<h1>Kullanıcılar</h1>
<a href="/User/CreateUser" class="btn btn-outline-primary">Kullanıcı Ekle</a>

<div class="text-danger" asp-validation-summary="All"></div>

<div class="row">

    <div class="col-md-8">

        <table class="table table-striped table-hover table-bordered p-4">
            <thead>
                <tr>
                    <th style="width:60px;">User Id</th>
                    <th>User Name</th>
                    <th style="width:70px;">Roles</th>
                    <th style="width:160px;"><p class="text-danger text-center">Güncelle</p></th>
                    <th style="width:160px;"><p class="text-danger text-center">Roller</p></th>
                    <th style="width:160px;">
                        <p class="text-danger text-center">Sil</p>
                    </th>

                </tr>
            </thead>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="4" class="text-center">
                        No User
                    </td>
                </tr>
            }
            else
            {

                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Name</td>
                            <td>
                            </td>
                            <td class="text-warning text-center">
                                @*<a href="/User/UpdateUser/@user.Id" class="btn btn-warning btn-sm btn-center">Güncelle</a>*@
                                <form asp-action="UpdateUser" asp-controller="User" method="get">
                                    <input type="hidden" name="userName" value="@user.UserName" />
                                    <button class="btn btn-warning btn-sm" type="submit">Güncelle</button>
                                </form>
                            </td>
                            <td class="text-warning text-center">
                                <form asp-action="AssignRole" asp-controller="Role" method="get">
                                    <input type="hidden" name="id" value="@user.Id" />

                                    <button class="btn btn-primary btn-sm" type="submit">Rolleri Güncelle</button>
                                </form>
                            </td>
                            <td class="text-danger text-center">
                              
                                <a href="/User/DeleteUser/@user.Id" class="btn btn-danger btn-sm">Sil</a>



                            </td>


                        </tr>

                    }
                </tbody>

            }

        </table>


    </div>


</div>


