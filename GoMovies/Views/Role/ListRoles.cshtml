@model List<ApplicationRole>

<h1>Roller</h1>
<a href="/Role/CreateRole" class="btn btn-outline-primary">Rol Ekle</a>

<div class="text-danger" asp-validation-summary="All"></div>

<div class="row">

    <div class="col-md-8">

        <table class="table table-striped table-hover table-bordered p-4">
            <thead>
                <tr>
                    <th style="width:60px;">Role Id</th>
                    <th>Role Name</th>
                    <th style="width:70px;">Users</th>
                    <th style="width:160px;"><p class="text-danger text-center">Güncelle</p></th>
                    <th style="width:160px;"><p class="text-danger text-center">Sil</p></th>

                </tr>
            </thead>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="4" class="text-center">
                        No Roles
                    </td>
                </tr>
            }
            else
            {

                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.Id</td>
                            <td>@role.Name</td>
                            <td>
                            </td>
                            <td class="text-warning text-center">
                                <a href="/Role/UpdateRole/@role.Id" class="btn btn-warning btn-sm btn-center">Güncelle</a>
                            </td>
                            <td class="text-danger text-center">

                                <a href="/Role/DeleteRole/@role.Id" class="btn btn-danger btn-sm">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>

            }

        </table>

    </div>


</div>



